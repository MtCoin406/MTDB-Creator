    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:page="clr-namespace:MTDBCreator.PageControls"
    Title="MTDB Creator"
    MinWidth="640"
    MinHeight="480"
    Icon="PNNLLogo.ico"
    Tag="MTDB Creator"
    WindowState="Maximized">

    <TabControl Name="MainTabControl" TabStripPlacement="Bottom">
